{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        // Copied from @loopback/build/config/tsconfig.common.json //
        // --------------------------------------------------------//
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "incremental": true,
        "lib": [
            "es2019",
            "esnext.asynciterable"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2019",
        "sourceMap": true,
        "declaration": true
        // --------------------------------------------------------//
    },
    "include": [
        "src",
        "__tests__",
        "index.ts"
    ]
}